<% layout('layout') -%>

<div class="container">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary mb-3">
                <i class="fas fa-question-circle me-3"></i>
                Brukerveiledning
            </h1>
            <p class="lead text-muted">
                Lær hvordan du bruker Rev-stemmsystemet
            </p>
        </div>
    </div>

    <!-- Quick Start Guide -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-rocket me-2"></i>
                        Kom i gang raskt
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <div class="badge bg-primary rounded-circle me-3 p-2">1</div>
                                <div>
                                    <h6 class="fw-bold">Gå til hovedsiden</h6>
                                    <p class="text-muted small mb-0">Klikk på "Hjem" i navigasjonsmenyen for å se tilgjengelige rever.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <div class="badge bg-primary rounded-circle me-3 p-2">2</div>
                                <div>
                                    <h6 class="fw-bold">Velg din favoritt</h6>
                                    <p class="text-muted small mb-0">Se på revbildene og klikk "Stem på denne!" under reven du liker best.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <div class="badge bg-primary rounded-circle me-3 p-2">3</div>
                                <div>
                                    <h6 class="fw-bold">Se resultatene</h6>
                                    <p class="text-muted small mb-0">Etter at du har stemt, vil du se oppdaterte statistikker.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <div class="badge bg-primary rounded-circle me-3 p-2">4</div>
                                <div>
                                    <h6 class="fw-bold">Stem igjen!</h6>
                                    <p class="text-muted small mb-0">Få nye rever ved å klikke "Få nye rever" og stem på flere!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Overview -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fas fa-star me-2"></i>
                Funksjoner og egenskaper
            </h2>
            
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center h-100 border-success">
                        <div class="card-body">
                            <i class="fas fa-mobile-alt fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Mobilvenlig</h5>
                            <p class="card-text">
                                Fungerer perfekt på både mobil, nettbrett og PC. 
                                Responsivt design som tilpasser seg skjermstørrelsen.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center h-100 border-info">
                        <div class="card-body">
                            <i class="fas fa-sync-alt fa-3x text-info mb-3"></i>
                            <h5 class="card-title">Automatisk oppdatering</h5>
                            <p class="card-text">
                                Statistikk oppdateres automatisk hvert 30. sekund 
                                slik at du alltid ser de nyeste resultatene.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center h-100 border-warning">
                        <div class="card-body">
                            <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Spambeskyttelse</h5>
                            <p class="card-text">
                                Systemet forhindrer at samme person stemmer 
                                på samme rev flere ganger i løpet av kort tid.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12 text-center">
            <a href="/" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-home me-2"></i>Tilbake til hovedsiden
            </a>
            <a href="/about" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-info-circle me-2"></i>Om systemet
            </a>
        </div>
    </div>

    <!-- Detailed Instructions -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-home me-2"></i>
                        Hovedside - Stemming
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Slik stemmer du:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Du vil se 2 tilfeldige revbilder
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Klikk på "Stem på denne!" under reven du liker best
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Du får en bekreftelse når stemmen er registrert
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Nye rever lastes automatisk etter stemmegivning
                        </li>
                    </ul>
                    
                    <h6 class="mt-3">Ekstra funksjoner:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-sync-alt text-info me-2"></i>
                            "Få nye rever" - laster inn nye tilfeldige rever
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-crown text-warning me-2"></i>
                            Se hvem som leder øverst på siden
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Statistikkside
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Hva du kan se:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-trophy text-warning me-2"></i>
                            Mest populære rev med bildet
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-list text-primary me-2"></i>
                            Topp 10 ranking av alle rever
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-chart-pie text-info me-2"></i>
                            Prosentvis fordeling av stemmer
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-clock text-success me-2"></i>
                            Når hver rev sist fikk en stemme
                        </li>
                    </ul>
                    
                    <h6 class="mt-3">Sammendrag:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-vote-yea text-primary me-2"></i>
                            Totalt antall stemmer avgitt
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-paw text-info me-2"></i>
                            Antall unike rever som har fått stemmer
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-users text-success me-2"></i>
                            Antall unike stemmegivere
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Overview -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fas fa-star me-2"></i>
                Funksjoner og egenskaper
            </h2>
            
            <div class="row">
