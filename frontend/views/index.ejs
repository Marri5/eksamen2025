<%- include('layout', { body: `
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="bi bi-images"></i> Bildegalleri
        </h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (images.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">Ingen bilder er lastet opp ennå.</p>
                <a href="/upload" class="btn btn-primary">
                    <i class="bi bi-cloud-upload"></i> Last opp første bilde
                </a>
            </div>
        <% } else { %>
            <div class="row g-4">
                <% images.forEach(image => { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 image-card" data-image-id="<%= image._id %>">
                            <img src="<%= backendUrl %>/uploads/<%= image.filename %>" 
                                 class="card-img-top" 
                                 alt="<%= image.originalName %>"
                                 style="height: 250px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title text-truncate" title="<%= image.originalName %>">
                                    <%= image.originalName %>
                                </h6>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="btn btn-primary btn-sm vote-btn" 
                                            data-image-id="<%= image._id %>"
                                            onclick="voteForImage('<%= image._id %>')">
                                        <i class="bi bi-hand-thumbs-up"></i> Stem
                                    </button>
                                    <span class="badge bg-secondary">
                                        <span class="vote-count"><%= image.votes %></span> stemmer
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer text-muted small">
                                Lastet opp: <%= new Date(image.uploadDate).toLocaleDateString('no-NO') %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<!-- Toast for notifications -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="voteToast" class="toast" role="alert">
        <div class="toast-header">
            <i class="bi bi-info-circle text-primary me-2"></i>
            <strong class="me-auto">Melding</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

<script>
function voteForImage(imageId) {
    const button = document.querySelector(\`button[data-image-id="\${imageId}"]\`);
    button.disabled = true;
    
    fetch(\`/vote/\${imageId}\`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        const toast = document.getElementById('voteToast');
        const toastBody = toast.querySelector('.toast-body');
        
        if (data.error) {
            toastBody.textContent = data.error;
            toast.classList.add('bg-warning');
        } else {
            toastBody.textContent = 'Din stemme er registrert!';
            toast.classList.remove('bg-warning');
            
            // Update vote count
            const card = document.querySelector(\`.image-card[data-image-id="\${imageId}"]\`);
            const voteSpan = card.querySelector('.vote-count');
            voteSpan.textContent = data.votes;
        }
        
        const bsToast = new bootstrap.Toast(toast);
        bsToast.show();
    })
    .catch(error => {
        console.error('Error:', error);
        const toast = document.getElementById('voteToast');
        const toastBody = toast.querySelector('.toast-body');
        toastBody.textContent = 'En feil oppstod. Prøv igjen senere.';
        toast.classList.add('bg-danger');
        const bsToast = new bootstrap.Toast(toast);
        bsToast.show();
    })
    .finally(() => {
        button.disabled = false;
    });
}
</script>
` }) %> 