<div class="container">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary mb-3">
                <i class="fas fa-chart-bar me-3"></i>
                Stemmestatistikk
            </h1>
            <p class="lead text-muted">
                Se hvilke rever som er mest populære
            </p>
        </div>
    </div>

    <!-- Error Display -->
    <% if (error) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
    <% } %>

    <% if (statistics) { %>
    <!-- Summary Statistics -->
    <div class="row mb-5">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center h-100 border-primary">
                <div class="card-body">
                    <i class="fas fa-vote-yea fa-3x text-primary mb-3"></i>
                    <h3 class="card-title text-primary"><%= statistics.summary.totalVotes %></h3>
                    <p class="card-text">Totale stemmer</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center h-100 border-info">
                <div class="card-body">
                    <i class="fas fa-paw fa-3x text-info mb-3"></i>
                    <h3 class="card-title text-info"><%= statistics.summary.uniqueFoxes %></h3>
                    <p class="card-text">Unike rever</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center h-100 border-success">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h3 class="card-title text-success"><%= statistics.summary.uniqueVoters %></h3>
                    <p class="card-text">Unike stemmegivere</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center h-100 border-warning">
                <div class="card-body">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h3 class="card-title text-warning"><%= statistics.summary.recentActivity %></h3>
                    <p class="card-text">Stemmer siste 24t</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Leader -->
    <% if (statistics.topFox) { %>
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-warning bg-light">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-crown me-2"></i>
                        Mest populære rev akkurat nå!
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <img src="<%= statistics.topFox.imageUrl %>" 
                                 alt="Top Fox" 
                                 class="img-fluid rounded shadow"
                                 style="max-height: 300px; object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                            <h2 class="text-primary">Rev <%= statistics.topFox._id %></h2>
                            <p class="lead">
                                Denne reven leder med 
                                <span class="badge bg-primary fs-5">
                                    <i class="fas fa-heart me-1"></i>
                                    <%= statistics.topFox.voteCount %> stemmer
                                </span>
                            </p>
                            <div class="progress mb-3" style="height: 30px;">
                                <div class="progress-bar bg-warning" 
                                     role="progressbar" 
                                     style="width: 100%">
                                    <strong>Mest populær!</strong>
                                </div>
                            </div>
                            <p class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Denne reven har fått <%= Math.round((statistics.topFox.voteCount / statistics.summary.totalVotes) * 100) %>% av alle stemmer
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Top Foxes Ranking -->
    <% if (statistics.topFoxes && statistics.topFoxes.length > 0) { %>
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fas fa-trophy me-2"></i>
                Topp <%= Math.min(statistics.topFoxes.length, 10) %> mest populære rever
            </h2>
            
            <!-- Top 3 Special Display -->
            <div class="row mb-4">
                <% statistics.topFoxes.slice(0, 3).forEach((fox, index) => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 <%= index === 0 ? 'border-warning' : index === 1 ? 'border-secondary' : 'border-dark' %> position-relative">
                        <!-- Ranking Badge -->
                        <div class="position-absolute top-0 start-50 translate-middle">
                            <span class="badge rounded-pill bg-<%= index === 0 ? 'warning' : index === 1 ? 'secondary' : 'dark' %> fs-5 px-3 py-2">
                                <% if (index === 0) { %>
                                    <i class="fas fa-crown me-1"></i>#1
                                <% } else if (index === 1) { %>
                                    <i class="fas fa-medal me-1"></i>#2
                                <% } else { %>
                                    <i class="fas fa-award me-1"></i>#3
                                <% } %>
                            </span>
                        </div>
                        
                        <div class="card-img-container mt-3">
                            <img src="<%= fox.imageUrl %>" 
                                 alt="Fox <%= fox._id %>" 
                                 class="card-img-top"
                                 style="height: 250px; object-fit: cover;">
                        </div>
                        
                        <div class="card-body text-center">
                            <h5 class="card-title">Rev <%= fox._id %></h5>
                            <p class="card-text">
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-heart me-1"></i>
                                    <%= fox.voteCount %> stemmer
                                </span>
                            </p>
                            
                            <!-- Vote Percentage -->
                            <div class="progress mb-2">
                                <div class="progress-bar bg-<%= index === 0 ? 'warning' : index === 1 ? 'secondary' : 'dark' %>" 
                                     role="progressbar" 
                                     style="width: <%= Math.round((fox.voteCount / statistics.summary.totalVotes) * 100) %>%">
                                    <%= Math.round((fox.voteCount / statistics.summary.totalVotes) * 100) %>%
                                </div>
                            </div>
                            
                            <p class="text-muted small">
                                <i class="fas fa-clock me-1"></i>
                                Sist stemt: <%= new Date(fox.lastVote).toLocaleDateString('no-NO') %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>

            <!-- Complete Ranking Table -->
            <% if (statistics.topFoxes.length > 3) { %>
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        Komplett rankingliste
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Rev</th>
                                    <th scope="col">Bilde</th>
                                    <th scope="col">Stemmer</th>
                                    <th scope="col">Prosent</th>
                                    <th scope="col">Sist stemt</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% statistics.topFoxes.forEach((fox, index) => { %>
                                <tr class="<%= index < 3 ? 'table-' + (index === 0 ? 'warning' : index === 1 ? 'secondary' : 'light') : '' %>">
                                    <td class="fw-bold">
                                        <% if (index === 0) { %>
                                            <i class="fas fa-crown text-warning me-1"></i>
                                        <% } else if (index === 1) { %>
                                            <i class="fas fa-medal text-secondary me-1"></i>
                                        <% } else if (index === 2) { %>
                                            <i class="fas fa-award text-dark me-1"></i>
                                        <% } %>
                                        <%= index + 1 %>
                                    </td>
                                    <td class="fw-bold">Rev <%= fox._id %></td>
                                    <td>
                                        <img src="<%= fox.imageUrl %>" 
                                             alt="Fox <%= fox._id %>" 
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            <i class="fas fa-heart me-1"></i>
                                            <%= fox.voteCount %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" 
                                                 role="progressbar" 
                                                 style="width: <%= Math.round((fox.voteCount / statistics.summary.totalVotes) * 100) %>%">
                                                <%= Math.round((fox.voteCount / statistics.summary.totalVotes) * 100) %>%
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-muted small">
                                        <%= new Date(fox.lastVote).toLocaleDateString('no-NO', { 
                                            year: 'numeric', 
                                            month: 'short', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <% } %>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12 text-center">
            <a href="/" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-vote-yea me-2"></i>
                Tilbake til stemming
            </a>
            
            <button id="refresh-stats-btn" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-sync-alt me-2"></i>
                Oppdater statistikk
            </button>
        </div>
    </div>

    <% } else { %>
    <!-- No Statistics Available -->
    <div class="row">
        <div class="col-12 text-center">
            <div class="card border-info">
                <div class="card-body">
                    <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                    <h4 class="card-title">Ingen statistikk tilgjengelig</h4>
                    <p class="card-text">
                        Det ser ut til at ingen har stemt ennå, eller at statistikken ikke kunne lastes.
                    </p>
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-vote-yea me-2"></i>
                        Start å stemme!
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-refresh statistics every 30 seconds
    setInterval(refreshStatistics, 30000);
    
    // Manual refresh button
    const refreshBtn = document.getElementById('refresh-stats-btn');
    if (refreshBtn) {
        refreshBtn.addEventListener('click', function() {
            refreshStatistics(true);
        });
    }
});

function refreshStatistics(manual = false) {
    if (manual) {
        const refreshBtn = document.getElementById('refresh-stats-btn');
        const originalText = refreshBtn.innerHTML;
        
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Oppdaterer...';
        
        setTimeout(() => {
            location.reload();
        }, 1000);
    } else {
        // Silent refresh - could implement AJAX update here
        console.log('Auto-refreshing statistics...');
    }
}
</script> 